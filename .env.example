# JWT Configuration
# Secret key for signing JWT tokens
# IMPORTANT: Change this in production to a strong, random secret
JWT_SECRET=dev-secret-key-change-in-production

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True

# Database Configuration (optional - defaults to SQLite in data/ folder)
# DATABASE_URI=sqlite:///path/to/database.db
# DATABASE_URI=postgresql://user:password@localhost/dbname

# CORS Configuration (optional - defaults to localhost:4321 and localhost:3000)
# CORS_ORIGINS=http://localhost:4321,http://localhost:3000

# Rate Limiting (optional - defaults to 100 requests per 15 minutes)
# RATE_LIMIT=100 per 15 minutes
